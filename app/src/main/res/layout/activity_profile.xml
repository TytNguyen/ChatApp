<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/profile_activity"
    tools:context=".ProfileActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/profile_image"
        android:src="@mipmap/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="135dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:layout_below="@id/profile_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:textSize="20sp"
        android:id="@+id/username"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hey I'm using a new group chat. Please join together"
        android:layout_below="@id/username"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textColor="@color/gray1"
        android:layout_margin="25dp"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textAlignment="center"
        android:id="@+id/status"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_request"
        android:layout_below="@id/status"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="65dp"
        android:layout_marginRight="65dp"
        android:textColor="@color/white"
        android:background="@color/colorPrimaryDark"
        android:text="Send Message"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAllCaps="false"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_cancel"
        android:layout_below="@id/status"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="65dp"
        android:layout_marginRight="65dp"
        android:textColor="@color/white"
        android:background="@color/colorPrimaryDark"
        android:text="Cancel Chat Request"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="gone"
        android:textAllCaps="false"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_remove"
        android:layout_below="@id/status"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="65dp"
        android:layout_marginRight="65dp"
        android:textColor="@color/white"
        android:background="@color/colorPrimaryDark"
        android:text="Remove this Contact"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="gone"
        android:textAllCaps="false"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_accept"
        android:layout_below="@id/status"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="65dp"
        android:layout_marginRight="65dp"
        android:textColor="@color/white"
        android:background="@color/colorPrimaryDark"
        android:text="Accept Chat Request"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="gone"
        android:textAllCaps="false"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_decline"
        android:layout_below="@id/btn_accept"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="65dp"
        android:layout_marginRight="65dp"
        android:textColor="@color/white"
        android:background="@color/colorPrimaryDark"
        android:text="Decline Chat Request"
        android:textSize="20sp"
        android:visibility="gone"
        android:textStyle="bold"
        android:textAllCaps="false"/>

</RelativeLayout>